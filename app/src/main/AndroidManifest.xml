<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.octopusstudios.carnospace.cmp">

    <application
        android:name="net.octopusstudios.carnospace.cmp.status.SharedState"
        android:allowBackup="true"
        android:icon="@mipmap/cmp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.octopusstudios.carnospace.cmp.activity.MissionsListerActivity"
            android:label="@string/missionList"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="net.octopusstudios.carnospace.cmp.activity.MissionDetailsActivity"
            android:label="@string/missionDetails"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="net.octopusstudios.carnospace.cmp.launcher.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>